@{
    ViewData["Title"] = "Trang chủ";
}
@await Component.InvokeAsync("SlideShow")
<main class="container mx-auto px-6 py-12 space-y-20">

    <section>
        <h2 class="text-3xl font-bold mb-8 text-center">Danh Mục Nổi Bật</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="group relative h-64 rounded-3xl overflow-hidden cursor-pointer">
                <img src="https://images.unsplash.com/photo-1542291026-7eec264c27ff?auto=format&fit=crop&w=600&q=80" class="w-full h-full object-cover transition duration-700 group-hover:scale-110" alt="Running">
                <div class="absolute inset-0 bg-black/30 group-hover:bg-black/50 transition flex items-center justify-center">
                    <h3 class="text-2xl font-bold text-white tracking-wider border-b-2 border-transparent group-hover:border-white transition-all pb-1">RUNNING</h3>
                </div>
            </div>

            <div class="group relative h-64 rounded-3xl overflow-hidden cursor-pointer">
                <img src="https://images.unsplash.com/photo-1460353581641-37baddab0fa2?auto=format&fit=crop&w=600&q=80" class="w-full h-full object-cover transition duration-700 group-hover:scale-110" alt="Training">
                <div class="absolute inset-0 bg-black/30 group-hover:bg-black/50 transition flex items-center justify-center">
                    <h3 class="text-2xl font-bold text-white tracking-wider border-b-2 border-transparent group-hover:border-white transition-all pb-1">TRAINING</h3>
                </div>
            </div>

            <div class="group relative h-64 rounded-3xl overflow-hidden cursor-pointer">
                <img src="https://images.unsplash.com/photo-1595950653106-6c9ebd614d3a?auto=format&fit=crop&w=600&q=80" class="w-full h-full object-cover transition duration-700 group-hover:scale-110" alt="Lifestyle">
                <div class="absolute inset-0 bg-black/30 group-hover:bg-black/50 transition flex items-center justify-center">
                    <h3 class="text-2xl font-bold text-white tracking-wider border-b-2 border-transparent group-hover:border-white transition-all pb-1">LIFESTYLE</h3>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="flex justify-between items-end mb-8">
            <h2 class="text-3xl font-bold">Bán Chạy Nhất</h2>
            <a href="#" class="text-sm underline hover:text-gray-500">Xem tất cả</a>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
            <div class="group relative">
                <div class="w-full h-80 bg-gray-200 rounded-3xl overflow-hidden relative liquid-glass">
                    <img src="https://images.unsplash.com/photo-1606107557195-0e29a4b5b4aa?auto=format&fit=crop&w=500&q=80" class="w-full h-full object-cover group-hover:scale-105 transition duration-500">
                    <button class="absolute bottom-4 right-4 bg-white text-black p-3 rounded-full shadow-lg opacity-0 group-hover:opacity-100 translate-y-4 group-hover:translate-y-0 transition-all duration-300">
                        <i class="ph ph-plus font-bold"></i>
                    </button>
                </div>
                <div class="mt-4">
                    <h3 class="text-lg font-semibold">Nike Air Green</h3>
                    <p class="text-gray-500">Giày chạy bộ</p>
                    <p class="mt-1 font-bold text-black">3.500.000 ₫</p>
                </div>
            </div>

            <div class="group relative">
                <div class="w-full h-80 bg-gray-200 rounded-3xl overflow-hidden relative liquid-glass">
                    <img src="https://images.unsplash.com/photo-1600185365926-3a2ce3cdb9eb?auto=format&fit=crop&w=500&q=80" class="w-full h-full object-cover group-hover:scale-105 transition duration-500">
                    <button class="absolute bottom-4 right-4 bg-white text-black p-3 rounded-full shadow-lg opacity-0 group-hover:opacity-100 translate-y-4 group-hover:translate-y-0 transition-all duration-300">
                        <i class="ph ph-plus font-bold"></i>
                    </button>
                </div>
                <div class="mt-4">
                    <h3 class="text-lg font-semibold">Nike Air Max</h3>
                    <p class="text-gray-500">Thể thao hàng ngày</p>
                    <p class="mt-1 font-bold text-black">4.200.000 ₫</p>
                </div>
            </div>
        </div>
    </section>

    <section class="py-10 border-t border-gray-200">
        <h2 class="text-3xl font-bold mb-8 text-center">Sản Phẩm Mới</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

            <div class="relative rounded-3xl overflow-hidden h-96 group liquid-glass">
                <img src="https://images.unsplash.com/photo-1556906781-9a412961d28c?auto=format&fit=crop&w=800&q=80" class="absolute inset-0 w-full h-full object-cover transition duration-700 group-hover:scale-105">
                <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent flex flex-col justify-end p-8">
                    <h3 class="text-2xl text-white font-bold">Urban Street V1</h3>
                    <p class="text-gray-300 mb-4">Thiết kế đột phá cho đường phố.</p>
                    <a href="#" class="inline-block w-max text-white border-b border-white pb-1">Mua ngay &rarr;</a>
                </div>
            </div>

            <div class="relative rounded-3xl overflow-hidden h-96 group liquid-glass">
                <img src="https://images.unsplash.com/photo-1512374382149-233c42b6a83b?auto=format&fit=crop&w=800&q=80" class="absolute inset-0 w-full h-full object-cover transition duration-700 group-hover:scale-105">
                <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent flex flex-col justify-end p-8">
                    <h3 class="text-2xl text-white font-bold">Court Legacy</h3>
                    <p class="text-gray-300 mb-4">Huyền thoại trở lại.</p>
                    <a href="#" class="inline-block w-max text-white border-b border-white pb-1">Mua ngay &rarr;</a>
                </div>
            </div>

        </div>
    </section>

</main>








