@using WebBanGiayTheThao.Models
@model IEnumerable<WebBanGiayTheThao.Models.CtgioHang>

<main class="container mx-auto px-0 md:px-6 py-12 mt-4 md:mt-10">
    <form id="checkout-form" onsubmit="handleOrder(event)">
        <div class="flex flex-col lg:flex-row gap-8">

            <div class="w-full lg:w-2/3 space-y-6">

                <div class="liquid-glass p-6 md:p-8 rounded-3xl">
                    <h2 class="text-xl font-bold mb-6 flex items-center gap-2">
                        <i class="ph ph-map-pin-line text-2xl"></i> Thông tin giao hàng
                    </h2>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="space-y-1">
                            <label class="text-xs font-bold uppercase text-gray-500 ml-1">Họ và tên</label>
                            <input type="text" required placeholder="Ví dụ: Nguyễn Văn A" class="input-glass w-full px-4 py-3 rounded-xl transition">
                        </div>
                        <div class="space-y-1">
                            <label class="text-xs font-bold uppercase text-gray-500 ml-1">Số điện thoại</label>
                            <input type="tel" required placeholder="Ví dụ: 0987..." class="input-glass w-full px-4 py-3 rounded-xl transition">
                        </div>
                        <div class="space-y-1 md:col-span-2">
                            <label class="text-xs font-bold uppercase text-gray-500 ml-1">Email (Để nhận hóa đơn)</label>
                            <input type="email" required placeholder="email@example.com" class="input-glass w-full px-4 py-3 rounded-xl transition">
                        </div>
                    </div>

                    <div class="mt-6 space-y-4">
                        <div class="space-y-1">
                            <label class="text-xs font-bold uppercase text-gray-500 ml-1">Địa chỉ cụ thể</label>
                            <input type="text" required placeholder="Số nhà, tên đường..." class="input-glass w-full px-4 py-3 rounded-xl transition">
                        </div>
                        <div class="space-y-1">
                            <label class="text-xs font-bold uppercase text-gray-500 ml-1">Ghi chú (Tùy chọn)</label>
                            <textarea rows="2" placeholder="Ví dụ: Giao hàng giờ hành chính..." class="input-glass w-full px-4 py-3 rounded-xl transition"></textarea>
                        </div>
                    </div>
                </div>

                <div class="liquid-glass p-6 md:p-8 rounded-3xl">
                    <h2 class="text-xl font-bold mb-4 flex items-center gap-2">
                        <i class="ph ph-credit-card text-2xl"></i> Phương thức thanh toán
                    </h2>

                    <div class="space-y-3">
                        <label class="relative block cursor-pointer group">
                            <input type="radio" name="payment_method" value="cod" class="peer sr-only" checked>
                            <div class="flex items-start p-4 border border-gray-200 rounded-xl transition-all peer-checked:border-black peer-checked:bg-black/5 peer-checked:shadow-md hover:bg-gray-50">
                                <div class="mt-1 mr-3">
                                    <i class="ph-fill ph-circle text-2xl text-gray-300 peer-checked:hidden"></i>
                                    <i class="ph-fill ph-check-circle text-2xl text-black hidden peer-checked:block"></i>
                                </div>
                                <div class="flex-1">
                                    <div class="flex items-center justify-between">
                                        <p class="font-bold text-sm">Thanh toán khi nhận hàng (COD)</p>
                                        <i class="ph ph-package text-xl text-gray-400"></i>
                                    </div>
                                    <p class="text-xs text-gray-500 mt-1">Bạn sẽ thanh toán tiền mặt cho shipper khi nhận hàng.</p>
                                </div>
                            </div>
                            <div class="absolute inset-0 border-2 border-black rounded-xl opacity-0 peer-checked:opacity-100 pointer-events-none transition"></div>
                        </label>

                        <label class="relative block cursor-pointer group">
                            <input type="radio" name="payment_method" value="banking" class="peer sr-only">
                            <div class="flex items-start p-4 border border-gray-200 rounded-xl transition-all peer-checked:border-black peer-checked:bg-black/5 peer-checked:shadow-md hover:bg-gray-50">
                                <div class="mt-1 mr-3">
                                    <i class="ph-fill ph-circle text-2xl text-gray-300 peer-checked:hidden"></i>
                                    <i class="ph-fill ph-check-circle text-2xl text-black hidden peer-checked:block"></i>
                                </div>
                                <div class="flex-1">
                                    <div class="flex items-center justify-between">
                                        <p class="font-bold text-sm">Chuyển khoản Ngân hàng (VietQR)</p>
                                        <i class="ph ph-qr-code text-xl text-gray-400"></i>
                                    </div>
                                    <p class="text-xs text-gray-500 mt-1">Quét mã QR để thanh toán nhanh chóng.</p>
                                </div>
                            </div>
                            <div class="absolute inset-0 border-2 border-black rounded-xl opacity-0 peer-checked:opacity-100 pointer-events-none transition"></div>
                        </label>

                        <label class="relative block cursor-pointer group">
                            <input type="radio" name="payment_method" value="momo" class="peer sr-only">
                            <div class="flex items-start p-4 border border-gray-200 rounded-xl transition-all peer-checked:border-black peer-checked:bg-pink-50 peer-checked:shadow-md hover:bg-gray-50">
                                <div class="mt-1 mr-3">
                                    <i class="ph-fill ph-circle text-2xl text-gray-300 peer-checked:hidden"></i>
                                    <i class="ph-fill ph-check-circle text-2xl text-pink-600 hidden peer-checked:block"></i>
                                </div>
                                <div class="flex-1">
                                    <div class="flex items-center justify-between">
                                        <p class="font-bold text-sm group-hover:text-pink-600 transition">Ví MoMo</p>
                                        <i class="ph ph-wallet text-xl text-pink-500"></i>
                                    </div>
                                    <p class="text-xs text-gray-500 mt-1">Thanh toán qua ứng dụng ví điện tử MoMo.</p>
                                </div>
                            </div>
                            <div class="absolute inset-0 border-2 border-pink-600 rounded-xl opacity-0 peer-checked:opacity-100 pointer-events-none transition"></div>
                        </label>
                    </div>
                </div>
            </div>

            <div class="w-full lg:w-1/3">
                <div class="bg-white p-6 md:p-8 rounded-3xl shadow-xl border border-gray-200 h-fit relative z-10">
                    <h2 class="text-xl font-bold">Đơn hàng của bạn</h2>

                    <div class="space-y-4 max-h-60 overflow-y-auto pr-2 custom-scrollbar">
                        @foreach(var item in Model)
                            {
                                <div class="flex gap-4 items-center group">
                                    <div class="w-16 h-16 bg-white rounded-lg overflow-hidden flex-shrink-0 border border-gray-200">
                                        <img src="@item.SanPham.AnhDaiDien" class="w-full h-full object-cover group-hover:scale-110 transition duration-500">
                                    </div>
                                    <div class="flex-1">
                                        <h4 class="font-bold text-sm line-clamp-1">@item.SanPham.TenSanPham</h4>
                                        <p class="text-xs text-gray-500">Size: @item.Size.Size | x @item.SoLuong</p>
                                    </div>
                                    <span class="font-bold text-sm">@((item.SanPham.DonGia ?? 0).ToString("#,##0"))₫</span>
                                </div>
                            }                    
                    </div>

                    <div class="space-y-3 pt-4 border-t border-dashed border-gray-300">
                        <label class="text-xs font-bold uppercase text-gray-500">Mã ưu đãi</label>

                        <div class="relative group">
                            <select onchange="document.getElementById('voucher-input').value = this.value"
                                    class="input-glass w-full pl-4 pr-10 py-2 rounded-xl text-sm appearance-none cursor-pointer text-gray-700 font-medium hover:bg-white/80 transition focus:ring-2 focus:ring-black/20 border border-gray-200">
                                <option value="">-- Chọn mã trong ví --</option>
                                @if (ViewBag.MyVouchers != null)
                                {
                                    foreach (var v in (List<UserVoucher>)ViewBag.MyVouchers)
                                    {
                                        <option value="@v.MaCodeLuu">@v.MaCodeLuu (Giảm @v.GiaTriGiamLuu?.ToString("#,##0")₫)</option>
                                    }
                                }
                            </select>
                            <div class="absolute right-4 top-1/2 transform -translate-y-1/2 pointer-events-none text-gray-500">
                                <i class="ph-bold ph-caret-down"></i>
                            </div>
                        </div>

                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="ph ph-tag text-gray-400"></i>
                            </div>
                            <input type="text"
                                   name="MaVoucher"
                                   id="voucher-input"
                                   value="@TempData["VoucherOld"]"
                                   placeholder="Hoặc nhập mã..."
                                   class="input-glass w-full pl-9 pr-4 py-3 rounded-xl text-sm transition focus:ring-2 focus:ring-black/20 focus:border-black uppercase placeholder:normal-case font-bold text-black border border-gray-200">
                        </div>
                        <p class="text-[10px] text-gray-400 italic">* Hệ thống sẽ kiểm tra và trừ tiền sau khi bấm Hoàn tất.</p>
                    </div>

                        <div id="active-voucher" class="hidden flex items-center justify-between p-3 bg-green-50 border border-green-200 rounded-xl">
                            <div class="flex items-center gap-2">
                                <div class="bg-green-100 p-1 rounded-full">
                                    <i class="ph-fill ph-ticket text-green-600"></i>
                                </div>
                                <div>
                                    <p class="text-xs font-bold text-green-700" id="voucher-code-display">CODE</p>
                                    <p class="text-[10px] text-green-600">Áp dụng thành công</p>
                                </div>
                            </div>
                            <button type="button" onclick="removeVoucher()" class="text-gray-400 hover:text-red-500 transition p-1">
                                <i class="ph-bold ph-x"></i>
                            </button>
                        </div>
                    </div>

                    <div class="border-t border-gray-200 pt-4 space-y-3">
                        <div class="flex justify-between text-sm text-gray-600">
                            <span>Tạm tính</span>
                            <span>7.027.199 ₫</span>
                        </div>
                        <div class="flex justify-between text-sm text-gray-600">
                            <span>Phí vận chuyển</span>
                            <span class="text-green-600 font-bold">Miễn phí</span>
                        </div>
                        <div class="hidden flex justify-between text-sm text-red-500">
                            <span>Voucher</span>
                            <span>-0 ₫</span>
                        </div>
                    </div>

                    <div class="flex justify-between items-end pt-4 border-t border-gray-200">
                        <span class="font-bold text-lg">Tổng thanh toán</span>
                        <div class="text-right">
                            <p class="text-2xl font-black text-black">7.027.199 ₫</p>
                            <p class="text-xs text-gray-400">(Đã bao gồm VAT)</p>
                        </div>
                    </div>

                <button type="submit" class="w-full py-4 bg-black text-white font-bold rounded-full hover:bg-gray-800 transition shadow-lg flex items-center justify-center gap-2">
                    HOÀN TẤT ĐẶT HÀNG <i class="ph-bold ph-arrow-right"></i>
                </button>
                </div>
            </div>
    </form>
</main>

