                            <input type="radio" name="payment_method" value="banking" class="peer sr-only">
                            <div class="flex items-start p-4 border border-gray-200 rounded-xl transition-all peer-checked:border-black peer-checked:bg-black/5 peer-checked:shadow-md hover:bg-gray-50">
