@using WebBanGiayTheThao.Models
@model IEnumerable<WebBanGiayTheThao.Models.CtgioHang>

<main class="container mx-auto px-4 md:px-6 py-12 mt-4 md:mt-10">

    @if (TempData["LoiThanhToan"] != null)
    {
        <div class="mb-6 mx-auto max-w-4xl bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-xl flex items-center gap-3 animate-bounce">
            <i class="ph-fill ph-warning-circle text-2xl"></i>
            <div>
                <p class="font-bold">Thông báo</p>
                <p class="text-sm">@TempData["LoiThanhToan"]</p>
            </div>
        </div>
    }

    <form asp-controller="ThanhToan" asp-action="DatHang" method="post">
        <div class="flex flex-col lg:flex-row gap-8 items-start">

            <div class="w-full lg:w-2/3 space-y-6">
                <div class="bg-white p-6 md:p-8 rounded-3xl shadow-sm border border-gray-100">
                    <h2 class="text-xl font-bold mb-6 flex items-center gap-2">
                        <i class="ph ph-map-pin-line text-2xl"></i> Thông tin giao hàng
                    </h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="space-y-1">
                            <label class="text-xs font-bold uppercase text-gray-500 ml-1">Họ và tên *</label>
                            <input type="text" name="HoTenNguoiNhan" required
                                   class="w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:bg-white focus:border-black focus:ring-1 focus:ring-black outline-none transition"
                                   placeholder="Nguyễn Văn A">
                        </div>
                        <div class="space-y-1">
                            <label class="text-xs font-bold uppercase text-gray-500 ml-1">Số điện thoại *</label>
                            <input type="tel" name="Sdtnhan" maxlength="10" required
                                   oninput="this.value = this.value.replace(/[^0-9]/g, '');"
                                   class="w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:bg-white focus:border-black focus:ring-1 focus:ring-black outline-none transition"
                                   placeholder="098...">
                        </div>
                        <div class="space-y-1 md:col-span-2">
                            <label class="text-xs font-bold uppercase text-gray-500 ml-1">Địa chỉ nhận hàng *</label>
                            <input type="text" name="DiaChiNhan" required
                                   class="w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:bg-white focus:border-black focus:ring-1 focus:ring-black outline-none transition"
                                   placeholder="Số nhà, đường, phường/xã, quận/huyện...">
                        </div>
                        <div class="space-y-1 md:col-span-2">
                            <label class="text-xs font-bold uppercase text-gray-500 ml-1">Ghi chú</label>
                            <textarea name="GhiChu" rows="2" placeholder="Ví dụ: Giao giờ hành chính..."
                                      class="w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:bg-white focus:border-black focus:ring-1 focus:ring-black outline-none transition"></textarea>
                        </div>
                    </div>
                </div>

                <div class="bg-white p-6 md:p-8 rounded-3xl shadow-sm border border-gray-100">
                    <h2 class="text-xl font-bold mb-4 flex items-center gap-2">
                        <i class="ph ph-credit-card text-2xl"></i> Phương thức thanh toán
                    </h2>
                    <div class="space-y-3">
                        <label class="relative block cursor-pointer group select-none">
                            <input type="radio" name="PhuongThucThanhToan" value="1" class="peer sr-only" checked>
                            <div class="flex items-start p-4 border-2 border-black bg-gray-50 rounded-xl transition-all peer-checked:bg-black/5 peer-checked:shadow-sm">
                                <div class="mt-1 mr-3"><i class="ph-fill ph-check-circle text-2xl text-black"></i></div>
                                <div class="flex-1">
                                    <p class="font-bold text-sm text-black">Thanh toán khi nhận hàng (COD)</p>
                                    <p class="text-xs text-gray-500 mt-1">Thanh toán tiền mặt cho shipper khi nhận hàng.</p>
                                </div>
                            </div>
                        </label>
                    </div>
                </div>
            </div>

            <div class="w-full lg:w-1/3">
                <div class="bg-white p-6 md:p-8 rounded-3xl shadow-xl border border-gray-200 h-fit sticky top-24">
                    <h2 class="text-xl font-bold mb-6">Đơn hàng của bạn</h2>

                    <div class="space-y-4 max-h-[35vh] overflow-y-auto pr-2 mb-6 scrollbar-hide">
                        @foreach (var item in Model)
                        {
                            <div class="flex gap-4 items-center py-2 border-b border-gray-50 last:border-0">
                                <div class="w-14 h-14 bg-gray-100 rounded-lg overflow-hidden border border-gray-200 shrink-0">
                                    <img src="~/img/sanpham/@(item.SanPham?.AnhDaiDien ?? "")" class="w-full h-full object-cover">
                                </div>
                                <div class="flex-1 min-w-0">
                                    <h4 class="font-bold text-sm text-gray-900 line-clamp-1">@(item.SanPham?.TenSanPham ?? "Sản phẩm")</h4>
                                    <p class="text-xs text-gray-500">Size: @(item.Size?.Size.ToString() ?? "-") | x @item.SoLuong</p>
                                </div>
                                <span class="font-bold text-sm whitespace-nowrap">@((item.SanPham?.DonGia ?? 0).ToString("#,##0"))₫</span>
                            </div>
                        }
                    </div>

                    <div class="space-y-3 pt-4 border-t border-dashed border-gray-300">
                        <label class="text-xs font-bold uppercase text-gray-500">Mã ưu đãi của bạn</label>

                        <div class="relative group">
                            <select id="voucher-select"
                                    name="MaVoucher"
                                    onchange="updatePrice(this)"
                                    class="w-full pl-4 pr-10 py-3 rounded-xl text-sm appearance-none cursor-pointer bg-gray-50 text-gray-700 font-bold hover:bg-gray-100 transition focus:ring-2 focus:ring-black border border-gray-200 outline-none shadow-sm">

                                <option value="" data-giam="0" data-min="0">-- Chọn mã giảm giá từ ví --</option>

                                @if (ViewBag.MyVouchers != null)
                                {
                                    foreach (var v in (List<UserVoucher>)ViewBag.MyVouchers)
                                    {
                                        <option value="@v.MaCodeLuu"
                                                data-giam="@(v.GiaTriGiamLuu ?? 0)"
                                                data-min="@(v.DonToiThieu ?? 0)">
                                            @v.MaCodeLuu (Giảm @(v.GiaTriGiamLuu?.ToString("#,##0") ?? "0")₫)
                                        </option>
                                    }
                                }
                            </select>

                            <div class="absolute right-4 top-1/2 transform -translate-y-1/2 pointer-events-none text-gray-500">
                                <i class="ph-bold ph-caret-down fs-5"></i>
                            </div>
                        </div>

                        <div id="voucher-message" class="text-[11px] text-gray-500 italic px-1">
                            Chọn mã phù hợp với giá trị đơn hàng.
                        </div>
                    </div>

                    <div class="pt-6 mt-2 border-t border-gray-200 space-y-2">
                        <div class="flex justify-between text-sm text-gray-600">
                            <span>Tạm tính</span>
                            <span class="font-medium text-gray-900">@(((decimal)ViewBag.TongGoc).ToString("#,##0"))₫</span>
                        </div>

                        <div class="flex justify-between text-sm text-green-600 font-medium">
                            <span>Giảm giá</span>
                            <span id="discount-display">- 0₫</span>
                        </div>

                        <div class="flex justify-between items-end pt-4 border-t border-gray-100">
                            <span class="font-bold text-lg text-gray-900">Tổng cộng</span>
                            <div class="text-right">
                                <p class="text-2xl font-black text-black leading-none" id="final-total-display">
                                    @(((decimal)ViewBag.TongThanhToan).ToString("#,##0"))₫
                                </p>
                                <p class="text-[10px] text-gray-400 italic mt-1">(Đã bao gồm VAT)</p>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="w-full mt-6 py-4 bg-black text-white font-bold rounded-2xl hover:bg-gray-900 transition shadow-lg hover:shadow-xl active:scale-[0.95] flex items-center justify-center gap-2">
                        HOÀN TẤT ĐẶT HÀNG <i class="ph-bold ph-arrow-right"></i>
                    </button>
                </div>
            </div>
        </div>
    </form>
</main>

<script>
    const baseTotal = @Html.Raw(ViewBag.TongGoc);

    function updatePrice(selectElement) {
        const selectedOption = selectElement.options[selectElement.selectedIndex];
        const discountAmount = parseFloat(selectedOption.getAttribute('data-giam')) || 0;
        const minOrder = parseFloat(selectedOption.getAttribute('data-min')) || 0;
        const msgLabel = document.getElementById('voucher-message');
        const discountLabel = document.getElementById('discount-display');
        const totalDisplay = document.getElementById('final-total-display');

        let actualDiscount = 0;
        const fmt = new Intl.NumberFormat('vi-VN');

        if (baseTotal >= minOrder) {
            actualDiscount = discountAmount;
            if (actualDiscount > baseTotal) actualDiscount = baseTotal;

            msgLabel.innerText = selectElement.value === "" ? "Chọn mã phù hợp với giá trị đơn hàng." : "Áp dụng mã thành công!";
            msgLabel.className = "text-[11px] text-green-600 font-medium italic px-1";
        } else {
            actualDiscount = 0;
            msgLabel.innerText = `Mã chỉ áp dụng cho đơn từ ${fmt.format(minOrder)}₫`;
            msgLabel.className = "text-[11px] text-red-500 font-medium italic px-1";
        }

        const finalTotal = baseTotal - actualDiscount;
        discountLabel.innerText = `- ${fmt.format(actualDiscount)}₫`;
        totalDisplay.innerText = `${fmt.format(finalTotal)}₫`;

        if(actualDiscount > 0) {
            discountLabel.classList.add('font-bold', 'text-base');
        } else {
            discountLabel.classList.remove('font-bold', 'text-base');
        }
    }
</script>