<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ShoesStore</title>

    <!-- Tailwind (leader) -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'sport-red': '#ff0000',
                        'glass-light': 'rgba(255, 255, 255, 0.7)'
                    },
                    fontFamily: {
                        sans: ['Inter', 'sans-serif']
                    }
                }
            }
        }
    </script>

    <!-- Fonts & Icons (leader) -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/@@phosphor-icons/web"></script>

    <!-- Site CSS (leader) -->
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true">
    <!-- DuyKhang css dành cho user-->

    <link href="~/css/user-glass.css" rel="stylesheet" asp-append-version="true">


    <!-- Bootstrap CSS (DuyKhang – bổ sung, không xoá cái cũ nếu có) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-gray-50 text-gray-900 flex flex-col min-h-screen">

    <!-- Header -->
    <partial name="_LayoutHeader" />

    <!-- Main content -->
    <div class="flex-grow pt-20">
        @RenderBody()
    </div>

    <!-- Footer -->
    <partial name="_LayoutFooter" />

    <!-- Scripts leader -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- DuyKhang:Bootstrap modal -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- DuyKhang: Đăng nhập Modal-->
    @await Html.PartialAsync("~/Views/NguoiDung/_DangNhapModal.cshtml")
    <!-- DuyKhang: Đăng ký Modal-->
    @await Html.PartialAsync("~/Views/NguoiDung/_DangKyModal.cshtml")
    <!-- DuyKhang: Thông báo Modal -->
    @await Html.PartialAsync("~/Views/NguoiDung/_ThongBaoModal.cshtml")

    @await RenderSectionAsync("Scripts", required: false)
    <!-- Xử lý thông báo đăng ký thành công DuyKhang 00:55 10/01/2026-->
    @if (TempData["RegisterSuccess"] != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {

                document.getElementById("thongBaoNoiDung").innerText =
                    @Html.Raw(Json.Serialize(TempData["RegisterSuccess"]));

                var modal = new bootstrap.Modal(
                    document.getElementById("thongBaoModal")
                );
                modal.show();
            });
        </script>
    }




</body>

</html>

