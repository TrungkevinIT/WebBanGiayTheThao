<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ShoesStore</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'sport-red': '#ff0000',
                        'glass-light': 'rgba(255, 255, 255, 0.7)'
                    },
                    fontFamily: {
                        sans: ['Inter', 'sans-serif']
                    }
                }
            }
        }
    </script>

    <!-- Fonts & Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/@@phosphor-icons/web"></script>

    <!-- Site CSS -->
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true">
    <link href="~/css/user-glass.css" rel="stylesheet" asp-append-version="true">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-gray-50 text-gray-900 flex flex-col min-h-screen">

    <!-- Header -->
    <partial name="_LayoutHeader" />

    <!-- Main content -->
    <div class="flex-grow pt-20">
        @RenderBody()
    </div>

    <!-- Footer -->
    <partial name="_LayoutFooter" />

    <!-- Scripts -->
    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- jQuery Validation + Unobtrusive -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

    <!-- Site JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Modals -->
    @await Html.PartialAsync("~/Views/NguoiDung/_DangNhapModal.cshtml")
    @await Html.PartialAsync("~/Views/NguoiDung/_DangKyModal.cshtml")
    @await Html.PartialAsync("~/Views/NguoiDung/_ThongBaoModal.cshtml")

    @await RenderSectionAsync("Scripts", required: false)

    <!-- Thông báo đăng ký thành công -->
    @if (TempData["RegisterSuccess"] != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                document.getElementById("thongBaoNoiDung").innerText =
                    @Html.Raw(Json.Serialize(TempData["RegisterSuccess"]));

                var modal = new bootstrap.Modal(
                    document.getElementById("thongBaoModal")
                );
                modal.show();
            });
        </script>
    }

    <!-- Thông báo khác -->
    @if (TempData["ThongBao"] != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                document.getElementById("thongBaoNoiDung").innerText =
                    "@Html.Raw(TempData["ThongBao"])";

                const modal = new bootstrap.Modal(
                    document.getElementById("thongBaoModal")
                );
                modal.show();
            });
        </script>
    }
</body>
</html>
