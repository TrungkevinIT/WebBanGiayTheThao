
@model IEnumerable<WebBanGiayTheThao.Models.SanPham>

<main class="container mx-auto px-6 py-8">
    <form method="get" asp-action="Index">
        <div class="mb-12 p-6 rounded-2xl liquid-glass bg-white shadow-sm">
            <div class="grid grid-cols-1 md:grid-cols-12 gap-4 items-end">

                <div class="md:col-span-3">
                    <label class="block text-xs font-bold text-gray-500 uppercase mb-1 ml-1">Tên sản phẩm</label>
                    <div class="relative">
                        <input type="text" name="search" value="@ViewBag.Search" placeholder="Tìm kiếm..." class="w-full pl-10 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:outline-none focus:border-black transition">
                        <i class="ph ph-magnifying-glass absolute left-3 top-3.5 text-gray-400 text-lg"></i>
                    </div>
                </div>

                <div class="md:col-span-2">
                    <label class="block text-xs font-bold text-gray-500 uppercase mb-1 ml-1">Danh mục</label>
                    <select name="loaispid" class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:outline-none focus:border-black cursor-pointer">
                        <option value="">Tất cả</option>
                        <option value="1" selected="@(ViewBag.LoaiSpId == 1)">Chạy bộ</option>
                        <option value="2" selected="@(ViewBag.LoaiSpId == 2)">Bóng rổ</option>
                        <option value="3" selected="@(ViewBag.LoaiSpId == 3)">Thời trang</option>
                    </select>
                </div>

                <div class="md:col-span-2">
                    <label class="block text-xs font-bold text-gray-500 uppercase mb-1 ml-1">Thương hiệu</label>
                    <select name="thuonghieuid" class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:outline-none focus:border-black cursor-pointer">
                        <option value="">Tất cả</option>
                        <option value="1" selected="@(ViewBag.ThuongHieuId == 1)">Nike</option>
                        <option value="2" selected="@(ViewBag.ThuongHieuId == 2)">Adidas</option>
                    </select>
                </div>

                <div class="md:col-span-3">
                    <label class="block text-xs font-bold text-gray-500 uppercase mb-1 ml-1">Sắp xếp giá</label>
                    <select name="gia" class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:outline-none focus:border-black cursor-pointer">
                        <option value="">Mặc định</option>
                        <option value="gia_tang" selected="@(ViewBag.Gia == "gia_tang")">Giá: Thấp đến Cao</option>
                        <option value="gia_giam" selected="@(ViewBag.Gia == "gia_giam")">Giá: Cao đến Thấp</option>
                    </select>
                </div>

                <div class="md:col-span-2">
                    <button type="submit" class="w-full py-3 bg-black text-white font-bold rounded-xl hover:bg-gray-800 transition shadow-lg">
                        Lọc ngay
                    </button>
                </div>
            </div>
        </div>
    </form>

    <div id="product-grid" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
        @foreach (var item in Model)
        {
            <div class="group relative bg-white rounded-2xl p-4 shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100">

                <div class="aspect-square rounded-xl overflow-hidden bg-gray-100 mb-4 relative">
                    <a asp-controller="SanPham"
                       asp-action="TrangChiTietSanPham"
                       asp-route-id="@item.Id"
                       class="block w-full h-full">

                        <img src="~/images/@item.AnhDaiDien"
                             alt="@item.TenSanPham"
                             class="w-full h-full object-cover object-center group-hover:scale-105 transition-transform duration-500">
                    </a>
                </div>

                <div class="space-y-2">
                    <p class="text-xs text-gray-500 font-bold uppercase">@item.LoaiSanPham?.TenLoai</p>

                    <h3 class="font-bold text-gray-900 truncate">
                        <a asp-controller="SanPham"
                           asp-action="TrangChiTietSanPham"
                           asp-route-id="@item.Id"
                           class="hover:text-gray-600 transition-colors" title="@item.TenSanPham">
                            @item.TenSanPham
                        </a>
                    </h3>

                    <div class="flex justify-between items-center">
                        <span class="text-lg font-bold text-black">
                            @((item.DonGia ?? 0).ToString("N0")) đ
                        </span>
                    </div>
                </div>
            </div>
        }
    </div>
</main>
