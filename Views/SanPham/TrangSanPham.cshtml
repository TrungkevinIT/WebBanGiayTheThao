@model (List<WebBanGiayTheThao.Models.SanPham> ListSanPham, int TongSoLuong)
<header class="mt-20 py-10 bg-gray-100/50">
    <div class="container mx-auto px-6 text-center">
        <h1 class="text-3xl font-bold uppercase tracking-wide">Cửa Hàng</h1>
        <p class="text-gray-500 text-sm mt-2">Trang chủ / Sản phẩm</p>
    </div>
</header>

<main class="container mx-auto px-6 py-8">
    <partial name="_BoLocSanPham" />
    
    <div>
        <div class="flex justify-between items-center mb-6 px-2">
            <h2 class="text-xl font-bold">Danh sách sản phẩm</h2>
            <span class="text-sm text-gray-500">Hiển thị <b class="text-black" id="showing-info">@Model.ListSanPham.Count</b> sản phẩm</span>
        </div>

        <div id="product-grid" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
            @foreach (var item in Model.ListSanPham)
            {
               
                <div class="group flex flex-col fade-in">
                    <div class="w-full aspect-[4/5] bg-gray-100 rounded-2xl overflow-hidden relative liquid-glass">
                    <img src="/img/sanpham/@item.AnhDaiDien" alt="New Balance 550" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110">
                    <div class="absolute top-3 left-3 bg-black text-white text-[10px] font-bold px-2 py-1 rounded uppercase tracking-wider z-10">@item.ThuongHieu.TenThuongHieu</div>
                    <div class="absolute bottom-4 right-4 translate-y-full opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300 z-20">
                        <button class="bg-white text-black w-10 h-10 flex items-center justify-center rounded-full shadow-lg hover:bg-black hover:text-white transition cursor-pointer"><i class="ph ph-shopping-bag text-lg"></i></button>
                    </div>
                </div>
                <div class="mt-4 px-1">
                    <a href="#" class="block"><h3 class="text-base font-bold text-gray-900 group-hover:text-gray-600 transition cursor-pointer line-clamp-1">@item.TenSanPham</h3></a>
                    <p class="text-xs text-gray-500 uppercase tracking-wide mt-1">@item.LoaiSanPham.TenLoai</p>
                    <div class="flex items-center gap-2 mt-2">
                            <span class="font-bold text-lg text-black">@item.DonGia.Value.ToString("#,##0")</span>  
                    </div>
                </div>
            </div>
                
            }
           
        </div>

        <div class="mt-16 flex justify-center">
         //
        </div>
    </div>
</main>