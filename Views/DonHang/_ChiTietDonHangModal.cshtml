<div class="modal fade" id="orderDetailModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content glass-modal">

            <!-- HEADER -->
            <div class="modal-header border-0">
                <div>
                    <h5 class="fw-bold mb-1">
                        Chi tiết đơn hàng #<span id="modalOrderCode"></span>
                    </h5>
                    <small class="text-muted">
                        Ngày đặt: <span id="modalOrderDate"></span>
                    </small>
                </div>
                <button type="button" class="btn-close"
                        data-bs-dismiss="modal"></button>
            </div>

            <!-- BODY -->
            <div class="modal-body">

                <!-- TRẠNG THÁI -->
                <div class="mb-4">
                    <span id="modalStatusBadge" class="badge"></span>
                </div>

                <!-- THÔNG TIN NHẬN HÀNG -->
                <div class="mb-4">
                    <h6 class="fw-bold mb-2">Thông tin nhận hàng</h6>
                    <p class="mb-1"><b>Người nhận:</b> <span id="modalReceiver"></span></p>
                    <p class="mb-1"><b>SĐT:</b> <span id="modalPhone"></span></p>
                    <p class="mb-0"><b>Địa chỉ:</b> <span id="modalAddress"></span></p>
                </div>

                <!-- TỔNG TIỀN -->
                <div class="border-top pt-3">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Phí vận chuyển</span>
                        <span id="modalShipping"></span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Giảm giá</span>
                        <span id="modalDiscount"></span>
                    </div>
                    <div class="d-flex justify-content-between fw-bold fs-5">
                        <span>Tổng thanh toán</span>
                        <span class="text-danger" id="modalTotal"></span>
                    </div>
                </div>

            </div>

            <!-- FOOTER -->
            <div class="modal-footer border-0">
                <button id="cancelBtn"
                        class="btn btn-outline-danger rounded-pill px-4 d-none">
                    Hủy đơn
                </button>

                <button id="reviewBtn"
                        class="btn btn-dark rounded-pill px-4 d-none">
                    Đánh giá
                </button>

                <button class="btn btn-outline-secondary rounded-pill px-4"
                        data-bs-dismiss="modal">
                    Đóng
                </button>
            </div>

        </div>
    </div>
</div>
