@model IEnumerable<WebBanGiayTheThao.Models.CtgioHang>

<main class="container mx-auto px-6 py-12 mt-20">
    <div class="flex justify-between items-end mb-10">
        <h1 class="text-3xl font-bold tracking-tight">Giỏ hàng của bạn</h1>
        <button id="btn-clear-cart" class="text-red-500 hover:text-red-700 font-bold text-sm underline flex items-center gap-2 hover:bg-red-50 px-3 py-2 rounded-lg transition">
            <i class="ph ph-trash text-lg"></i> Xóa tất cả
        </button>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-20 bg-gray-50 rounded-3xl">
            <i class="ph ph-shopping-cart text-6xl text-gray-300 mb-4"></i>
            <p class="text-gray-500 text-lg">Giỏ hàng của bạn đang trống</p>
            <a asp-controller="SanPham" asp-action="TrangSanPham" class="text-black font-bold mt-4 inline-block hover:underline">Mua sắm ngay</a>
        </div>
    }
    else
    {
        <div class="flex flex-col lg:flex-row gap-8">
            <div class="w-full lg:w-2/3">
                <div id="cart-items-container" class="space-y-4 min-h-[500px]">
                    @foreach (var item in Model)
                    {
                        <div class="bg-white rounded-[2.5rem] p-4 flex flex-col sm:flex-row items-center justify-between shadow-sm border border-gray-100 mx-auto max-w-4xl gap-6 sm:gap-0">

                            <div class="w-32 h-32 rounded-3xl overflow-hidden shrink-0 sm:ml-2 border border-gray-50 shadow-sm relative group">
                                <img src="@item.SanPham.AnhDaiDien"
                                     class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                                     alt="@item.SanPham.TenSanPham">
                            </div>

                            <div class="flex-1 flex flex-col items-center justify-center px-4 space-y-1 text-center">
                                <h3 class="font-bold text-xl text-gray-900 line-clamp-1">
                                    @item.SanPham.TenSanPham
                                </h3>
                                <p class="text-gray-500 text-sm">
                                    Size: <span class="font-medium text-gray-700">@(item.Size?.Size.ToString() ?? "N/A")</span>
                                </p>
                                <p class="font-bold text-lg text-gray-900 mt-2">
                                    @((item.SanPham.DonGia ?? 0).ToString("#,##0")) <span class="underline decoration-2 underline-offset-2">đ</span>
                                </p>
                            </div>

                            <div class="flex items-center gap-6 sm:mr-6">
                                <div class="flex items-center justify-between border-2 border-gray-200 rounded-full px-4 py-2 w-32 bg-white">
                                    <button disabled class="text-gray-400 cursor-not-allowed p-1">
                                        <i class="ph-bold ph-minus text-lg"></i>
                                    </button>

                                    <span class="font-bold text-lg text-gray-900 select-none">@item.SoLuong</span>

                                    <button disabled class="text-gray-400 cursor-not-allowed p-1">
                                        <i class="ph-bold ph-plus text-lg"></i>
                                    </button>
                                </div>

                                <a class="text-gray-400 hover:text-red-500 transition p-2 hover:bg-red-50 rounded-full">
                                    <i class="ph ph-trash text-2xl"></i>
                                </a>
                            </div>
                        </div>
                    }
                </div>
                <div class="mt-8 flex justify-center">
                    <div id="cart-pagination" class="flex items-center gap-2 bg-white/50 p-2 rounded-xl liquid-glass">
                    </div>
                </div>

                <div class="pt-4">
                    <a asp-controller="SanPham" asp-action="TrangSanPham" class="inline-flex items-center gap-2 text-gray-500 hover:text-black font-medium transition">
                        <i class="ph ph-arrow-left"></i> Tiếp tục mua sắm
                    </a>
                </div>
            </div>
            <div class="w-full lg:w-1/3">
                <div class="liquid-glass p-8 rounded-3xl sticky top-24 space-y-6">
                    <h2 class="text-xl font-bold">Thông tin đơn hàng</h2>

                    <div class="space-y-4 border-b border-gray-200 pb-6">
                        <div class="flex justify-between text-gray-600">
                            <span> Tổng Tiền</span>
                            <span id="sub-total" data-value="0" class="font-medium text-black">
                                @((Model?.Sum(x => (x.SoLuong ?? 0) * (x.SanPham.DonGia ?? 0)) ?? 0).ToString("#,##0")) ₫
                            </span>
                        </div>
                    </div>
                    <a asp-controller="ThanhToan" asp-action="TrangThanhToan" class="block w-full py-4 bg-black text-white font-bold rounded-full hover:bg-gray-800 transition transform active:scale-95 shadow-xl flex items-center justify-center gap-3">
                        ĐẶT HÀNG NGAY <i class="ph ph-arrow-right text-xl"></i>
                    </a>
                </div>
            </div>
        </div>
    }
</main>

