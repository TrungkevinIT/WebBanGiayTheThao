    <script>
        // --- DATA & CONFIG ---
        const userVouchers = [
            { id: 'v1', code: 'WELCOME', discount: 50000, minOrder: 1000000, description: 'Giảm 50k cho đơn từ 1 triệu' },
            { id: 'v2', code: 'SHOESLOVER', discount: 100000, minOrder: 3000000, description: 'Giảm 100k cho thành viên thân thiết' },
            { id: 'v3', code: 'BIGSALE', discount: 500000, minOrder: 5000000, description: 'Giảm 500k cho đơn hàng lớn' },
            { id: 'v4', code: 'LUXURY', discount: 1000000, minOrder: 10000000, description: 'Giảm 1 triệu cho đơn từ 10 triệu' }
        ];

        const itemsPerPage = 5; // Cấu hình 5 sản phẩm/trang
        let currentPage = 1;

        // --- DOM Elements ---
        const subTotalEl = document.getElementById('sub-total');
        const finalTotalEl = document.getElementById('final-total');
        const discountRow = document.getElementById('discount-row');
        const discountAmountEl = document.getElementById('discount-amount');
        const cartCountEl = document.getElementById('cart-count');
        const cartItemsContainer = document.getElementById('cart-items-container');
        const paginationContainer = document.getElementById('cart-pagination');

        // Modal Elements
        const modal = document.getElementById('voucher-modal');
        const voucherListEl = document.getElementById('voucher-list');
        const btnOpenModal = document.getElementById('open-voucher-modal');
        const btnRemoveVoucher = document.getElementById('remove-voucher');
        const selectedVoucherText = document.getElementById('selected-voucher-text');

        // State
        let currentSubTotal = 0;
        let currentDiscount = 0;
        let selectedVoucher = null;

        function formatCurrency(amount) {
            return amount.toLocaleString('vi-VN') + ' ₫';
        }

        // --- 1. LOGIC PHÂN TRANG (MỚI) ---
        function renderCartPage() {
            // Lấy tất cả các item hiện có trong DOM
            const allItems = Array.from(document.querySelectorAll('.cart-item'));
            const totalItems = allItems.length;
            const totalPages = Math.ceil(totalItems / itemsPerPage);

            // Kiểm tra nếu trang hiện tại lớn hơn tổng trang (do xóa sản phẩm)
            if (currentPage > totalPages && totalPages > 0) {
                currentPage = totalPages;
            } else if (totalPages === 0) {
                currentPage = 1; // Giỏ hàng trống
            }

            // Hiển thị/Ẩn items
            const startIndex = (currentPage - 1) * itemsPerPage;
            const endIndex = startIndex + itemsPerPage;

            allItems.forEach((item, index) => {
                if (index >= startIndex && index < endIndex) {
                    item.classList.remove('hidden-item');
                } else {
                    item.classList.add('hidden-item');
                }
            });

            // Render nút phân trang
            renderPaginationControls(totalPages);
        }

        function renderPaginationControls(totalPages) {
            paginationContainer.innerHTML = '';

            if (totalPages <= 1) return; // Không cần phân trang nếu <= 1 trang

            // Nút Prev
            const prevBtn = document.createElement('button');
            prevBtn.innerHTML = '<i class="ph ph-caret-left"></i>';
            prevBtn.className = `w-8 h-8 flex items-center justify-center rounded-lg transition ${currentPage === 1 ? 'text-gray-300 cursor-not-allowed' : 'hover:bg-black hover:text-white'}`;
            prevBtn.onclick = () => { if(currentPage > 1) { currentPage--; renderCartPage(); window.scrollTo(0,0); } };
            paginationContainer.appendChild(prevBtn);

            // Các nút số
            for (let i = 1; i <= totalPages; i++) {
                const btn = document.createElement('button');
                btn.innerText = i;
                if (i === currentPage) {
                    btn.className = "w-8 h-8 flex items-center justify-center rounded-lg bg-black text-white font-bold shadow-md";
                } else {
                    btn.className = "w-8 h-8 flex items-center justify-center rounded-lg hover:bg-black hover:text-white transition text-gray-600";
                    btn.onclick = () => { currentPage = i; renderCartPage(); window.scrollTo(0,0); };
                }
                paginationContainer.appendChild(btn);
            }

            // Nút Next
            const nextBtn = document.createElement('button');
            nextBtn.innerHTML = '<i class="ph ph-caret-right"></i>';
            nextBtn.className = `w-8 h-8 flex items-center justify-center rounded-lg transition ${currentPage === totalPages ? 'text-gray-300 cursor-not-allowed' : 'hover:bg-black hover:text-white'}`;
            nextBtn.onclick = () => { if(currentPage < totalPages) { currentPage++; renderCartPage(); window.scrollTo(0,0); } };
            paginationContainer.appendChild(nextBtn);
        }

        // --- 2. LOGIC TÍNH TỔNG TIỀN (CẬP NHẬT) ---
        // Lưu ý: Tính tổng tiền phải dựa trên TẤT CẢ item, kể cả item bị ẩn do phân trang
        function updateCartTotals() {
            const allItems = document.querySelectorAll('.cart-item');
            let tempTotal = 0;
            let totalQty = 0;

            allItems.forEach(item => {
                const price = parseInt(item.getAttribute('data-price'));
                const qty = parseInt(item.querySelector('.qty-display').innerText);
                tempTotal += price * qty;
                totalQty += qty;
            });

            currentSubTotal = tempTotal;
            subTotalEl.setAttribute('data-value', currentSubTotal);
            subTotalEl.innerText = formatCurrency(currentSubTotal);
            cartCountEl.innerText = totalQty;

            // Kiểm tra Voucher
            if (selectedVoucher) {
                if (currentSubTotal < selectedVoucher.minOrder) {
                    removeVoucherLogic();
                    alert(`Voucher ${selectedVoucher.code} đã bị hủy do đơn hàng không đủ điều kiện.`);
                } else {
                    currentDiscount = selectedVoucher.discount;
                }
            }

            const finalTotal = currentSubTotal - currentDiscount;
            finalTotalEl.innerText = formatCurrency(finalTotal > 0 ? finalTotal : 0);

            if (allItems.length === 0) {
                cartItemsContainer.innerHTML = '<p class="text-center text-gray-500 py-10">Giỏ hàng của bạn đang trống.</p>';
                paginationContainer.innerHTML = '';
            }
        }

        // --- 3. INIT ACTIONS (XỬ LÝ SỰ KIỆN) ---
        function initCartActions() {
            // Sử dụng Event Delegation để xử lý cho cả item có sẵn và item thêm mới (nếu có)
            // Tuy nhiên ở đây code tĩnh nên ta querySelectorAll là đủ
            const cartItems = document.querySelectorAll('.cart-item');

            cartItems.forEach(item => {
                const btnDecrease = item.querySelector('.btn-decrease');
                const btnIncrease = item.querySelector('.btn-increase');
                const btnRemove = item.querySelector('.btn-remove');
                const qtyDisplay = item.querySelector('.qty-display');

                btnDecrease.addEventListener('click', () => {
                    let qty = parseInt(qtyDisplay.innerText);
                    if (qty > 1) {
                        qty--;
                        qtyDisplay.innerText = qty;
                        updateCartTotals();
                    }
                });

                btnIncrease.addEventListener('click', () => {
                    let qty = parseInt(qtyDisplay.innerText);
                    qty++;
                    qtyDisplay.innerText = qty;
                    updateCartTotals();
                });

                btnRemove.addEventListener('click', () => {
                    if(confirm("Bạn có chắc muốn xóa sản phẩm này?")) {
                        item.remove();
                        // Sau khi xóa: Phải render lại trang và cập nhật tiền
                        renderCartPage();
                        updateCartTotals();
                    }
                });
            });
        }

        // --- 4. LOGIC XÓA TẤT CẢ ---
        const btnClearCart = document.getElementById('btn-clear-cart');

        if (btnClearCart) {
            btnClearCart.addEventListener('click', function() {
                // Kiểm tra xem giỏ hàng có sản phẩm không
                const allItems = document.querySelectorAll('.cart-item');
                if (allItems.length === 0) {
                    alert("Giỏ hàng của bạn đang trống!");
                    return;
                }

                // Xác nhận người dùng trước khi xóa
                if (confirm("Bạn có chắc chắn muốn xóa toàn bộ sản phẩm trong giỏ hàng?")) {

                    // 1. Xóa toàn bộ các thẻ HTML sản phẩm
                    allItems.forEach(item => item.remove());

                    // 2. Xóa dữ liệu trong LocalStorage (Để đồng bộ với site.js và không bị hiện lại khi F5)
                    localStorage.removeItem('shoes_cart');

                    // 3. Reset Voucher (Nếu đang áp dụng voucher thì phải hủy bỏ)
                    if (selectedVoucher) {
                        removeVoucherLogic();
                    }

                    // 4. Cập nhật lại giao diện và tổng tiền
                    // Hàm updateCartTotals cũ của bạn đã có logic: nếu item = 0 thì hiện thông báo trống
                    updateCartTotals();

                    // 5. Reset phân trang về trang 1
                    currentPage = 1;
                    renderCartPage();

                    // 6. Cập nhật số lượng trên icon giỏ hàng ở Header (Nếu site.js đã chạy)
                    if (typeof CartManager !== 'undefined') {
                        CartManager.updateBadge();
                    }
                }
            });
        }

        // --- VOUCHER LOGIC ---
        function openModal() { modal.classList.remove('hidden'); renderVouchers(); }
        function closeModal() { modal.classList.add('hidden'); }
        btnOpenModal.addEventListener('click', openModal);

        function renderVouchers() {
            voucherListEl.innerHTML = '';
            const sortedVouchers = userVouchers.sort((a, b) => {
                const aEligible = currentSubTotal >= a.minOrder;
                const bEligible = currentSubTotal >= b.minOrder;
                return bEligible - aEligible;
            });
            sortedVouchers.forEach(voucher => {
                const isEligible = currentSubTotal >= voucher.minOrder;
                const div = document.createElement('div');
                div.className = `p-4 rounded-xl border-2 flex items-center justify-between cursor-pointer group transition relative overflow-hidden ${isEligible ? 'border-gray-100 bg-white hover:border-black' : 'border-gray-100 bg-gray-100 opacity-60 cursor-not-allowed grayscale'}`;
                if (isEligible) div.onclick = () => applyVoucher(voucher);
                div.innerHTML = `<div class="flex items-center gap-4 z-10"><div class="w-12 h-12 bg-black text-white flex items-center justify-center rounded-lg font-bold text-xs">%</div><div><p class="font-bold text-sm">${voucher.code}</p><p class="text-xs text-gray-500 line-clamp-1">${voucher.description}</p><p class="text-[10px] text-gray-400 mt-1">Đơn tối thiểu: ${formatCurrency(voucher.minOrder)}</p></div></div>${isEligible ? '<div class="w-4 h-4 rounded-full border border-gray-300 group-hover:bg-black group-hover:border-black transition"></div>' : '<span class="text-[10px] font-bold text-red-500 bg-red-100 px-2 py-1 rounded">Chưa đủ ĐK</span>'}`;
                voucherListEl.appendChild(div);
            });
        }

        function applyVoucher(voucher) {
            selectedVoucher = voucher;
            currentDiscount = voucher.discount;
            discountRow.classList.remove('hidden');
            discountAmountEl.innerText = `-${formatCurrency(currentDiscount)}`;
            selectedVoucherText.innerText = `Đã dùng: ${voucher.code}`;
            selectedVoucherText.classList.add('font-bold', 'text-black');
            selectedVoucherText.classList.remove('text-gray-500');
            btnRemoveVoucher.classList.remove('hidden');
            closeModal();
            updateCartTotals();
        }

        function removeVoucherLogic() {
            selectedVoucher = null;
            currentDiscount = 0;
            discountRow.classList.add('hidden');
            selectedVoucherText.innerText = "Chọn Voucher của bạn";
            selectedVoucherText.classList.remove('font-bold', 'text-black');
            selectedVoucherText.classList.add('text-gray-500');
            btnRemoveVoucher.classList.add('hidden');
            updateCartTotals();
        }
        btnRemoveVoucher.addEventListener('click', removeVoucherLogic);

        // --- MAIN INIT ---
        initCartActions(); // Gán sự kiện cho các nút
        renderCartPage();  // Phân trang lần đầu
        updateCartTotals(); // Tính tiền lần đầu

    </script>
}

