@model WebBanGiayTheThao.Models.WebSetting
@{
    ViewData["Title"] = "Cấu hình Website";
    Layout = "_LayoutAdmin"; // Đảm bảo đúng layout của bạn
}

<div class="container-fluid pt-4 px-4">
    <div class="bg-light rounded p-4">
        <h4 class="mb-4 text-primary">Cấu hình thông tin Website</h4>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }

        <form asp-action="Index" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Logo" />

            <div class="row">
                <div class="col-md-4 text-center">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Logo hiện tại</label>
                        <div class="border p-2 bg-white rounded">
                            @if (!string.IsNullOrEmpty(Model.Logo))
                            {
                                <img src="~/images/logo/@Model.Logo" style="max-width: 100%; height: auto;" />
                            }
                            else
                            {
                                <span class="text-muted">Chưa có logo</span>
                            }
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LogoUpload" class="form-label fw-bold"></label>
                        <input asp-for="LogoUpload" class="form-control" type="file" accept="image/*" />
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Hotline" class="form-label fw-bold"></label>
                            <input asp-for="Hotline" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="EmailLienHe" class="form-label fw-bold"></label>
                            <input asp-for="EmailLienHe" class="form-control" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DiaChi" class="form-label fw-bold"></label>
                        <input asp-for="DiaChi" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Linkfacebook" class="form-label fw-bold"></label>
                        <input asp-for="Linkfacebook" class="form-control" placeholder="https://facebook.com/..." />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Mota" class="form-label fw-bold"></label>
                        <textarea asp-for="Mota" class="form-control" rows="4"></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fa fa-save me-2"></i> Lưu Cấu Hình
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>