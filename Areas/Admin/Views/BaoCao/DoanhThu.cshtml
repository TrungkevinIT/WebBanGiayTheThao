@model WebBanGiayTheThao.ViewModels.BaoCao.BaoCaoDoanhThuVM

@{
    ViewData["Title"] = "Báo cáo doanh thu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">

    <h4 class="fw-bold mb-4">
        Báo cáo thống kê doanh thu
    </h4>

    <!-- FORM CHỌN THÁNG / NĂM -->
    <form method="get" class="row g-3 mb-4">
        <div class="col-md-2">
            <label class="form-label">Tháng</label>
            <input type="number"
                   name="thang"
                   class="form-control"
                   min="1"
                   max="12"
                   value="@Model.Thang" />
        </div>

        <div class="col-md-2">
            <label class="form-label">Năm</label>
            <input type="number"
                   name="nam"
                   class="form-control"
                   value="@Model.Nam" />
        </div>

        <div class="col-md-2 d-flex align-items-end">
            <button class="btn btn-primary w-100">
                Xem báo cáo
            </button>
        </div>
    </form>

    <!-- TỔNG DOANH THU -->
    <div class="alert alert-info fw-bold">
        Tổng doanh thu:
        <span class="text-danger">
            @Model.TongDoanhThu.ToString("N0") VNĐ
        </span>
    </div>

    <!-- KHÔNG CÓ DỮ LIỆU -->
    @if (!Model.ChiTietTheoNgay.Any())
    {
        <div class="alert alert-warning">
            Không có dữ liệu trong thời gian này
        </div>
    }
    else
    {
        <!-- BẢNG CHI TIẾT -->
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Ngày</th>
                            <th>Doanh thu</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ChiTietTheoNgay)
                        {
                            <tr>
                                <td>@item.Ngay.ToString("dd/MM/yyyy")</td>
                                <td class="text-end">
                                    @item.TongTien.ToString("N0") VNĐ
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

</div>
