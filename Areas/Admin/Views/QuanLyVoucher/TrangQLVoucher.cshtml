@{
	Layout = "_LayoutAdmin";
}
@if (TempData["ThongBao"] != null)
{
    <div class="alert @TempData["LoaiThongBao"] alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["ThongBao"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@model IEnumerable<WebBanGiayTheThao.Models.Voucher>

<div class="container-fluid pt-4 px-4">
    <div class="bg-light text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h3 class="mb-0 text-primary text-uppercase" style="font-weight: 700;">Danh Sách Mã Giảm Giá</h3>
            <a asp-area="admin" asp-controller="QuanLyVoucher" asp-action="TrangThemVoucher" class="btn btn-primary">
                <i class="fa fa-plus-circle me-2"></i>Tạo Voucher Mới
            </a>
        </div>

        <div class="table-responsive">
            <table class="table text-center align-middle table-bordered table-hover mb-0">
                <thead class="bg-primary text-white">
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Mã Voucher</th>
                        <th scope="col" class="text-start ps-3">Giá Trị Giảm</th>
                        <th scope="col">Đơn Tối Thiểu</th>
                        <th scope="col">Ngày Bắt Đầu</th>
                        <th scope="col">Ngày Kết Thúc</th>
                        <th scope="col">Số Lượng</th>
                        <th scope="col" style="width: 160px;">Trạng Thái</th>
                        <th scope="col">Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td><span class="badge bg-light text-dark border fw-bold px-3 py-2">@item.MaCode</span></td>
                            <td class="text-danger fw-bold">
                                @item.GiaTriGiam.GetValueOrDefault().ToString("#,##0") đ
                            </td>
                            <td>
                                @item.GiaTriDonToiThieu.GetValueOrDefault().ToString("#,##0") đ
                            </td>
                            <td>
                                @item.NgayBatDau?.ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @item.NgayKetThuc?.ToString("dd/MM/yyyy")
                            </td>
                            <td class="text-center">
                                @if (item.SoLuong > 0)
                                {
                                    <span class="fw-bold text-dark">@item.SoLuong?.ToString("#,##0")</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Hết lượt</span>
                                }
                            </td>
                            <td class="text-center">
                                <span class="badge @(item.TrangThai == 1 ? "bg-success" : "bg-danger")">
                                    @(item.TrangThai == 1 ? "Đang chạy" : "Ngưng hoạt động")
                                </span>
                            </td>
                            <td>
                                <a href="capnhatvoucher.html" class="btn btn-sm btn-outline-primary rounded-circle me-1" title="Sửa">
                                    <i class="fa fa-pen"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
