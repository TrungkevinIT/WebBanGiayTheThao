@model IEnumerable<WebBanGiayTheThao.Models.LoaiSanPham>

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Quản lý Loại Sản Phẩm";
}

<div class="container-fluid pt-4 px-4">

    @if (TempData["ThongBao"] != null)
    {
        <div class="alert @TempData["LoaiThongBao"] alert-dismissible fade show" role="alert">
            <i class="fa fa-check-circle me-2"></i>@TempData["ThongBao"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="bg-light rounded p-4 mb-4">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <h6 class="mb-0 text-primary text-uppercase" style="font-weight: 700;">Quản lý Loại Sản Phẩm</h6>
            <a asp-action="TrangThemMoiLoaiSanPham" asp-controller="QuanLyLoaiSanPham" class="btn btn-sm btn-success">
                <i class="fa fa-plus me-1"></i> Thêm mới
            </a>
        </div>

        <form method="get" asp-action="TrangQLLoaiSanPham" asp-controller="QuanLyLoaiSanPham">
            <div class="row g-3">
                <div class="col-md-5">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="fa fa-search text-muted"></i></span>
                        <input type="text" name="Tenloai" value="@ViewBag.SearchName" class="form-control border-start-0" placeholder="Tìm tên loại sản phẩm...">
                    </div>
                </div>
                <div class="col-md-3">
                    <select class="form-select" name="trangThai">
                        <option value="">Tất cả trạng thái</option>
                        <option value="1" selected="@(ViewBag.TrangThai == 1)">Đang hoạt động</option>
                        <option value="0" selected="@(ViewBag.TrangThai != null && ViewBag.TrangThai == 0)">Ngừng hoạt động</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fa fa-search me-1"></i> Tìm kiếm
                    </button>
                </div>
            </div>
        </form>
    </div>

    <div class="bg-light text-center rounded p-4">
        <div class="table-responsive border rounded-3 overflow-hidden shadow-sm">
            <table class="table text-center align-middle table-bordered table-hover mb-0">
                <thead class="bg-primary text-white">
                    <tr>
                        <th scope="col" style="width: 10%;">ID</th>
                        <th scope="col" class="text-start ps-4">Tên Loại Sản Phẩm</th>
                        <th scope="col" style="width: 20%;">Trạng Thái</th>
                        <th scope="col" style="width: 15%;">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td class="text-start ps-4 fw-bold text-dark">@item.TenLoai</td>
                                <td class="align-middle">
                                    @if (item.TrangThai == 1)
                                    {
                                        <a asp-action="DoiTrangThai" asp-route-id="@item.Id"
                                           class="badge bg-success text-white text-decoration-none p-2 w-75"
                                           onclick="return confirm('Bạn có muốn NGỪNG hoạt động loại này?')">
                                            Đang hoạt động
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-action="DoiTrangThai" asp-route-id="@item.Id"
                                           class="badge bg-danger text-white text-decoration-none p-2 w-75"
                                           onclick="return confirm('Bạn có muốn KÍCH HOẠT lại loại này?')">
                                            Ngừng hoạt động
                                        </a>
                                    }
                                </td>
                                <td>
                                    <a asp-action="TrangCapNhatLoaiSanPham" asp-controller="QuanLyLoaiSanPham" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary rounded-circle me-1" title="Sửa">
                                        <i class="fa fa-pen"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted">
                                Không tìm thấy dữ liệu.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>