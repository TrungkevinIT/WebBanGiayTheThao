@model WebBanGiayTheThao.Models.LoaiSanPham

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Cập nhật Loại Sản Phẩm";
}

<div class="container-fluid pt-4 px-4">
    <div class="bg-light rounded p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h6 class="mb-0 text-primary text-uppercase" style="font-weight: 700;">Cập nhật Loại Sản Phẩm</h6>
            <a asp-action="TrangQLLoaiSanPham" asp-controller="QuanLyLoaiSanPham" class="btn btn-sm btn-outline-secondary">
                <i class="fa fa-arrow-left me-1"></i> Quay lại
            </a>
        </div>

        <div class="row">
            <div class="col-md-8 offset-md-2">
                <form method="post" asp-action="TrangCapNhatLoaiSanPham" asp-controller="QuanLyLoaiSanPham">

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input type="hidden" asp-for="Id" />

                    <div class="mb-4">
                        <label asp-for="TenLoai" class="form-label fw-bold">Tên loại sản phẩm <span class="text-danger">*</span></label>
                        <input asp-for="TenLoai" class="form-control form-control-lg" placeholder="Nhập tên loại..." required />
                        <span asp-validation-for="TenLoai" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="TrangThai" class="form-label fw-bold">Trạng thái hiển thị</label>
                        <select asp-for="TrangThai" class="form-select form-select-lg">
                            <option value="1">Đang hoạt động</option>
                            <option value="0">Ngừng hoạt động</option>
                        </select>
                        <span asp-validation-for="TrangThai" class="text-danger"></span>
                    </div>

                    <div class="text-center border-top pt-4">
                        <button type="submit" class="btn btn-warning px-5 py-2 text-white"
                                onclick="return confirm('Bạn có chắc chắn muốn lưu thay đổi cho loại sản phẩm này không?')">
                            <i class="fa fa-sync-alt me-2"></i>Lưu Thay Đổi
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}