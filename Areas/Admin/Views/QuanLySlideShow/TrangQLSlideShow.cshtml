@using WebBanGiayTheThao.Models;
@model IEnumerable<SlideShow>
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Quản lý Slideshow";
}

<div class="container-fluid pt-4 px-4">
    <div class="bg-light text-center rounded p-4">
        @if (TempData["ThongBao"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fa fa-check-circle me-2"></i> @TempData["ThongBao"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">Danh sách Banner Quảng Cáo Trong SlideShow</h6>
        </div>

        <div class="table-responsive border rounded-3 overflow-hidden shadow-sm" style="border-radius: 12px;">
            <table class="table text-center align-middle table-bordered table-hover mb-0">
                <thead class="bg-primary text-white">
                    <tr>
                        <th scope="col" style="width: 5%;">STT</th>
                        <th scope="col" style="width: 25%;">Ảnh Banner</th>
                        <th scope="col" class="text-start ps-4">Thông tin Banner & Cập nhật</th>
                    </tr>
                </thead>
                <tbody>
                    @if(Model !=null && Model.Any())
                    {
                        int stt = 0;
                        foreach(var p in Model)
                        {
                            <tr>
                                <td>@(++stt)</td>
                                <td class="py-3">
                                    <img src="/img/slideshow/@p.HinhAnh" alt="Banner 1"
                                         style="width: 180px; height: 70px; object-fit: cover; border-radius: 6px; border: 1px solid #ddd;">
                                </td>
                                <td class="text-start ps-4">
                                    <div class="d-flex align-items-center mb-1">
                                        <a asp-action="TrangCapNhatSlideShow" asp-route-id="@p.Id" class="btn btn-sm btn-outline-primary py-0 px-2" style="font-size: 12px;">
                                            <i class="fa fa-edit me-1"></i> Sửa
                                        </a>
                                    </div>

                                    <div class="text-muted small">
                                        <i class="fa fa-link me-1"></i>
                                        <a href="#" target="_blank" class="text-decoration-none text-secondary">@p.Link</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                   
                </tbody>
            </table>
        </div>
    </div>
</div>