@model WebBanGiayTheThao.Models.SlideShow
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Cập nhật Banner";
}

<div class="container-fluid pt-4 px-4">
    <div class="bg-light rounded h-100 p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h6 class="mb-0 text-primary"><i class="fa fa-edit me-2"></i>CẬP NHẬT BANNER</h6>
            <a asp-action="TrangQLSlideShow" class="btn btn-sm btn-outline-secondary">
                <i class="fa fa-arrow-left me-1"></i> Quay lại
            </a>
        </div>

        <form id="formCapNhat" asp-action="TrangCapNhatSlideShow" method="post" enctype="multipart/form-data">

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="HinhAnh" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-4">
                <div class="col-md-6">
                    <div class="card shadow-sm border-0">
                        <div class="card-body text-center bg-white">
                            <label class="small text-muted">Ảnh hiện tại:</label>
                            <div class="border rounded p-1 d-inline-block bg-light mb-3">
                                <img src="/img/@Model.HinhAnh" id="previewImage" style="height: 150px; object-fit: cover;">
                            </div>
                            <div class="text-start">
                                <label class="small fw-bold">Chọn ảnh mới:</label>
                                <input type="file" name="fileAnh" class="form-control" accept="image/*" onchange="hienThiAnhPreview(this)">
                                <span class="text-danger small">@Html.ValidationMessage("fileAnh")</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Link" class="form-label fw-bold small">Link liên kết (*)</label>

                        <input asp-for="Link" id="txtLink" class="form-control" placeholder="/san-pham/..." />
                        <span asp-validation-for="Link" id="errorLink" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-4 pt-3 border-top">
                <button type="button" class="btn btn-primary px-4" onclick="xacNhanLuu()">
                    <i class="fa fa-save me-1"></i> Lưu thay đổi
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function hienThiAnhPreview(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('previewImage').src = e.target.result;
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        function xacNhanLuu() {
            var inputLink = document.getElementById("txtLink");
            var errorSpan = document.getElementById("errorLink");
            var form = document.getElementById("formCapNhat");

            var linkVal = inputLink.value.trim();
            var idVal = document.getElementById("Id").value;
            if (linkVal === "") {
                errorSpan.innerText = "Vui lòng nhập đường dẫn liên kết (Bắt buộc).";
                return;
            } else {
                errorSpan.innerText = "";
            }

            var url = '/Admin/QuanLySlideShow/CheckLinkTrung?link=' + encodeURIComponent(linkVal) + '&id=' + idVal;

            fetch(url)
                .then(response => response.json())
                .then(isTrung => {

                    if (isTrung === true) {

                        errorSpan.innerText = "Link này đã tồn tại, vui lòng nhập link khác.";
                    } else {
                        
                        if (confirm('Bạn có chắc chắn muốn lưu thay đổi này không?')) {
                            form.submit();
                        }
                    }
                })
        }
    </script>
}