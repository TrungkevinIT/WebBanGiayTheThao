@model WebBanGiayTheThao.Models.SlideShow
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Cập nhật Banner";
}

<div class="container-fluid pt-4 px-4">
    <div class="row justify-content-center">
        <div class="col-sm-12 col-xl-10">
            <div class="bg-light rounded h-100 p-4">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h6 class="mb-0 text-primary text-uppercase">
                        <i class="fa fa-edit me-2"></i>Cập nhật Banner
                    </h6>
                    <a asp-action="TrangQLSlideShow" class="btn btn-sm btn-outline-secondary">
                        <i class="fa fa-arrow-left me-1"></i> Quay lại
                    </a>
                </div>

                <form id="formCapNhat" asp-action="TrangCapNhatSlideShow" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="HinhAnh" />

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="card shadow-sm border-0">
                                <div class="card-body text-center bg-white">
                                    <label class="form-label small text-muted">Ảnh hiện tại:</label>
                                    <div class="border rounded p-1 d-inline-block bg-light mb-3">
                                        <img src="/img/@Model.HinhAnh" id="previewImage"
                                             style="max-width: 100%; height: 150px; object-fit: cover;" alt="Banner">
                                    </div>
                                    <div class="text-start">
                                        <label class="form-label small fw-bold">Chọn ảnh mới:</label>
                                        <input type="file" name="fileAnh" class="form-control" accept="image/*" onchange="hienThiAnhPreview(this)">
                                        <span class="text-danger small">@Html.ValidationMessage("fileAnh")</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Link" class="form-label fw-bold small">Link liên kết</label>
                                <input asp-for="Link" class="form-control" placeholder="Ví dụ: /san-pham/giay-nike">
                                <span asp-validation-for="Link" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end mt-4 pt-3 border-top">
                        <button type="button" class="btn btn-primary px-4" onclick="xacNhanLuu()">
                            <i class="fa fa-save me-1"></i> Lưu thay đổi
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Hàm hiển thị ảnh preview
        function hienThiAnhPreview(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('previewImage').src = e.target.result;
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        // Hàm xử lý nút Lưu
        function xacNhanLuu() {
            var form = $('#formCapNhat');
            if (form.valid()) {
                // Nếu HỢP LỆ (True) -> Mới hiện Popup
                if (confirm('Bạn có chắc chắn muốn lưu thay đổi này không?')) {
                    form.submit(); // Người dùng bấm OK -> Gửi đi
                }
            }
        }
    </script>
}