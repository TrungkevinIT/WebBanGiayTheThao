@model IEnumerable<WebBanGiayTheThao.Models.HoaDon>

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Quản lý đơn hàng";
}

<div class="container-fluid pt-4 px-4">
    <div class="bg-light text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0 text-primary text-uppercase" style="font-weight: 700;">Danh Sách Đơn Hàng</h6>
        </div>

        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0"><i class="fa fa-search text-muted"></i></span>
                    <input type="text" class="form-control border-start-0" placeholder="Tìm mã đơn, tên khách...">
                </div>
            </div>
            <div class="col-md-3">
                <select class="form-select" aria-label="Lọc trạng thái">
                    <option selected value="">-- Tất cả trạng thái --</option>
                    <option value="1">Đã duyệt</option>
                    <option value="2">Đã hoàn thành</option>
                    <option value="3">Đã hủy</option>
                </select>
            </div>
            <div class="col-md-3">
                <input type="date" class="form-control">
            </div>
            <div class="col-md-2">
                <button class="btn btn-primary w-100"><i class="fa fa-filter me-2"></i>Lọc</button>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table text-center align-middle table-bordered table-hover mb-0">
                <thead class="bg-primary text-white">
                    <tr>
                        <th scope="col">Mã ĐH</th>
                        <th scope="col" class="text-start ps-3">Khách Hàng</th>
                        <th scope="col">Ngày Đặt</th>
                        <th scope="col">Tổng Tiền</th>
                        <th scope="col" style="width: 170px;">Trạng Thái</th>
                        <th scope="col">Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@item.Id</td>
                                <td class="text-start ps-3">
                                    @(item.HoTenNguoiNhan)
                                </td>
                                <td>@item.NgayDat?.ToString("dd/MM/yyyy")</td>
                                <td class="text-danger fw-bold">
                                    @string.Format("{0:N0} ₫", item.TongTien)
                                </td>
                                <td>
                                    <select class="form-select form-select-sm w-auto border-0 text-center "
                                            style="font-weight: 600; cursor: pointer;"
                                            onchange="doiMauTrangThai(this)"
                                            data-id="@item.Id">

                                        <option value="1" selected="@(item.TrangThai == 1)" class="bg-white text-dark">Đã duyệt</option>
                                        <option value="2" selected="@(item.TrangThai == 2)" class="bg-white text-dark">Đã hoàn thành</option>
                                        <option value="3" selected="@(item.TrangThai == 3)" class="bg-white text-dark">Đã hủy</option>
                                    </select>
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-outline-info rounded-circle me-1"
                                       asp-area="Admin"
                                       asp-controller="DonHang"
                                       asp-action="TrangXemChiTietDonHang"
                                       asp-route-id="@item.Id">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4">Không có dữ liệu đơn hàng.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-end mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item disabled"><a class="page-link" href="#">Trước</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">Sau</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>

