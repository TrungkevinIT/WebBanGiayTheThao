@{
    Layout = "_LayoutAdmin";
}
<div class="container-fluid pt-4 px-4">
    <div class="bg-light text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0 text-primary text-uppercase" style="font-weight: 700;">Danh Sách Đơn Hàng</h6>
        </div>

        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0"><i class="fa fa-search text-muted"></i></span>
                    <input type="text" class="form-control border-start-0" placeholder="Tìm mã đơn, tên khách...">
                </div>
            </div>
            <div class="col-md-3">
                <select class="form-select" aria-label="Lọc trạng thái">
                    <option selected value="">-- Trạng thái --</option>
                    <option value="pending">Chờ xử lý</option>
                    <option value="shipping">Đang giao</option>
                    <option value="completed">Hoàn thành</option>
                    <option value="cancelled">Đã hủy</option>
                </select>
            </div>
            <div class="col-md-3">
                <input type="date" class="form-control">
            </div>
            <div class="col-md-2">
                <button class="btn btn-primary w-100"><i class="fa fa-filter me-2"></i>Lọc</button>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table text-center align-middle table-bordered table-hover mb-0">
                <thead class="bg-primary text-white">
                    <tr>
                        <th scope="col">Mã ĐH</th>
                        <th scope="col" class="text-start ps-3">Khách Hàng</th>
                        <th scope="col">Sản Phẩm</th>
                        <th scope="col">Ngày Đặt</th>
                        <th scope="col">Tổng Tiền</th>
                        <th scope="col" style="width: 160px;">Trạng Thái</th>
                        <th scope="col">Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="fw-bold">#DH003</td>
                        <td class="text-start ps-3">Lê Văn C</td>
                        <td><span class="badge bg-light text-dark border">PUMA-MB02</span></td>
                        <td>05/01/2026</td>
                        <td class="text-danger fw-bold">3.800.000 ₫</td>
                        <td>
                            <select class="form-select form-select-sm w-auto border-success text-success fw-bold">
                                <option value="pending">Đã Duyệt</option>
                                <option value="2" selected>Đã Hoàn Thành</option>
                                <option value="3">Đã hủy</option>
                            </select>
                        </td>
                        <td>
                            <a class="btn btn-sm btn-outline-info rounded-circle me-1" asp-area="Admin" asp-action="TrangXemChiTietDonHang" asp-controller="QuanLyDonHang"><i class="fa fa-eye"></i></a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-end mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item disabled"><a class="page-link" href="#">Trước</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Sau</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<script>
    function updateStatusColor(select) {
        // Xóa hết các class màu cũ
        select.classList.remove('bg-warning', 'text-dark', 'bg-info', 'text-white', 'bg-success', 'bg-danger');

        // Thêm class màu mới dựa trên value được chọn
        if (select.value === 'pending') {
            select.classList.add('bg-warning', 'text-dark');
        } else if (select.value === 'shipping') {
            select.classList.add('bg-info', 'text-white');
        } else if (select.value === 'completed') {
            select.classList.add('bg-success', 'text-white');
        } else if (select.value === 'cancelled') {
            select.classList.add('bg-danger', 'text-white');
        }
    }
</script>

