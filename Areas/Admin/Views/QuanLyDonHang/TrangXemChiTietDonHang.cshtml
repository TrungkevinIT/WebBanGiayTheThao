@model WebBanGiayTheThao.Models.HoaDon

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="container-fluid pt-4 px-4">

    <div class="d-flex align-items-center justify-content-between mb-4">
        <h4 class="mb-0 text-primary fw-bold">Chi tiết đơn hàng #@Model.Id</h4>
        <div>
            <a asp-action="TrangQLDonHang" asp-area="Admin" asp-controller="QuanLyDonHang" class="btn btn-sm btn-outline-secondary">
                <i class="fa fa-arrow-left me-1"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-sm-12 col-xl-6">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4 d-flex align-items-center text-primary fw-bold">
                    <i class="fa fa-user me-2"></i>Thông tin khách hàng
                </h6>
                <div class="d-flex justify-content-between mb-2">
                    <span class="fw-bold">Họ tên:</span>
                    <span>@Model.HoTenNguoiNhan</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span class="fw-bold">Số điện thoại:</span>
                    <span>@Model.Sdtnhan</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span class="fw-bold">Email:</span>
                    <span>@(Model.User?.Email )</span>
                </div>
                <div class="d-flex justify-content-between">
                    <span class="fw-bold">Địa chỉ giao:</span>
                    <span class="text-end" style="max-width: 60%;">@Model.DiaChiNhan</span>
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-xl-6">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4 d-flex align-items-center text-primary fw-bold">
                    <i class="fa fa-info-circle me-2"></i>Thông tin đơn hàng
                </h6>
                <div class="d-flex justify-content-between mb-2">
                    <span class="fw-bold">Mã hóa đơn:</span>
                    <span class="text-dark fw-bold">#@Model.Id</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span class="fw-bold">Ngày đặt hàng:</span>
                    <span>@Model.NgayDat?.ToString("dd/MM/yyyy - HH:mm")</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span class="fw-bold">Phương thức TT:</span>
                    <span class="badge bg-secondary">Tiền mặt (COD)</span>
                </div>
                
            </div>
        </div>
    </div>

    <div class="bg-light text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0 text-uppercase fw-bold">Danh sách sản phẩm</h6>
        </div>
        <div class="table-responsive border rounded-3 overflow-hidden shadow-sm" style="border-radius: 12px;">
            <table class="table text-center align-middle table-bordered table-hover mb-0">
                <thead class="bg-primary text-white">
                    <tr>
                        <th scope="col" class="py-3">STT</th>
                        <th scope="col" class="py-3 text-start ps-4">Sản Phẩm</th>
                        <th scope="col" class="py-3">Size</th>
                        <th scope="col" class="py-3">Đơn Giá</th>
                        <th scope="col" class="py-3">Số Lượng</th>
                        <th scope="col" class="py-3 text-end pe-4">Thành Tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.CthoaDons != null && Model.CthoaDons.Any())
                    {
                        int stt = 1;
                        foreach (var item in Model.CthoaDons)
                        {
                            var anhDaiDien = item.SanPham?.AnhDaiDien;
                            string duongDanAnh = !string.IsNullOrEmpty(anhDaiDien) ? "/img/sanpham/" + anhDaiDien : "/img/default.jpg";

                            <tr>
                                <td>@stt</td>
                                <td class="text-start ps-4">
                                    <div class="d-flex align-items-center">
                                        <img src="@duongDanAnh" class="rounded me-2 border"
                                             style="width: 40px; height: 40px; object-fit: cover;">
                                        <div>
                                            <div class="fw-bold">@item.SanPham?.TenSanPham</div>
                                            <div><span class="badge bg-light text-dark border">@item.SanPham?.MaKieuDang</span></div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark border">
                                        @(item.Size?.Size.ToString() ?? "N/A")
                                    </span>
                                </td>
                                <td>
                                    @string.Format("{0:N0} ₫", item.DonGia)
                                </td>
                                <td>@item.SoLuong</td>
                                <td class="text-danger pe-4 fw-bold">
                                    @string.Format("{0:N0} ₫", item.DonGia * item.SoLuong)
                                </td>
                            </tr>
                            stt++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="py-3 text-muted">Không có sản phẩm nào.</td>
                        </tr>
                    }
                </tbody>
                <tfoot class="bg-white">
                    <tr>
                        <td colspan="4" class="text-end fw-bold text-primary fs-5 pt-3">Tổng thanh toán:</td>
                        <td colspan="2" class="text-end pe-4 fw-bold text-danger fs-5 pt-3">
                            @string.Format("{0:N0} ₫", Model.TongTien)
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>