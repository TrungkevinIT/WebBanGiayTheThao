@using WebBanGiayTheThao.Models
@model IEnumerable<SanPham>

@{
    Layout = "_LayoutAdmin";

    // Lấy thông tin phân trang cơ bản
    int currentPage = (ViewData["CurrentPage"] as int?) ?? 1;
    int totalPages = (ViewData["TotalPages"] as int?) ?? 1;
    int pageSize = (ViewData["PageSize"] as int?) ?? 10;
}

<div class="container-fluid pt-4 px-4">
    @if (TempData["ThongBao"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fa fa-check-circle me-2"></i> @TempData["ThongBao"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="bg-light rounded p-4 mb-4">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <h6 class="mb-0">Bộ lọc & Tìm kiếm</h6>
            <a asp-action="TrangThemSanPham" class="btn btn-sm btn-success"><i class="fa fa-plus me-1"></i> Thêm mới</a>
        </div>
        <partial name="_BoLocSanPham" />
    </div>

 
    <div class="bg-light text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">Danh sách sản phẩm</h6>
        </div>
        <div class="table-responsive border rounded-3 overflow-hidden shadow-sm" style="border-radius: 12px;">
            <table class="table text-center align-middle table-bordered table-hover mb-0">
                <thead class="bg-primary text-white">
                    <tr>
                        <th scope="col" class="py-3">STT</th>
                        <th scope="col" class="py-3">Tên sản phẩm</th>
                        <th scope="col" class="py-3">Mã Kiểu Dáng</th>
                        <th scope="col" class="py-3 text-start ps-4">Ảnh</th>
                        <th scope="col" class="py-3">Giá Bán</th>
                        <th scope="col" class="py-3">Thương Hiệu</th>
                        <th scope="col" class="py-3">Loại Sản Phẩm</th>
                        <th scope="col" class="py-3">Trạng Thái</th>
                        <th scope="col" class="py-3">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        int stt = (currentPage - 1) * pageSize;
                        foreach (var item in Model)
                        {
                            stt++;
                            <tr>
                                <td>@stt</td>
                                <td class="text-start ps-4">@item.TenSanPham</td>
                                <td><strong>@item.MaKieuDang</strong></td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.AnhDaiDien))
                                    {
                                        <img src="/img/sanpham/@item.AnhDaiDien" alt="anh" style="width: 50px; height: 50px; object-fit: cover; border-radius: 8px;">
                                    }
                                    else
                                    {
                                        <span>No Image</span>
                                    }
                                </td>
                                <td class="text-danger fw-bold">@(item.DonGia?.ToString("#,##0")) ₫</td>
                                <td>@(item.ThuongHieu?.TenThuongHieu)</td>
                                <td>@(item.LoaiSanPham?.TenLoai)</td>
                                <td>
                                    @if (item.TrangThai == 1)
                                    {
                                        <span class="badge bg-success rounded-pill">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary rounded-pill">Ngừng</span>
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-outline-primary rounded-circle me-1" asp-action="TrangCapNhatSanPham" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                                    @if (item.TrangThai == 1)
                                    {
                                        <a class="btn btn-sm btn-outline-danger rounded-circle"
                                           asp-action="XoaSanPham" asp-route-id="@item.Id"
                                           asp-route-search="@ViewBag.Search"
                                           asp-route-thuongHieuId="@ViewBag.ThuongHieuId"
                                           asp-route-loaiId="@ViewBag.LoaiId"
                                           asp-route-sortOrder="@ViewBag.SortOrder"
                                           asp-route-trangThai="@ViewBag.TrangThai"
                                           asp-route-page="@ViewBag.CurrentPage"
                                           onclick="return confirm('Bạn có chắc muốn ngừng kinh doanh sản phẩm này?');"
                                           title="Ngừng hoạt động">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-sm btn-outline-success rounded-circle"
                                           asp-action="XoaSanPham" asp-route-id="@item.Id"
                                           asp-route-search="@ViewBag.Search"
                                           asp-route-thuongHieuId="@ViewBag.ThuongHieuId"
                                           asp-route-loaiId="@ViewBag.LoaiId"
                                           asp-route-trangThai="@ViewBag.TrangThai"
                                           asp-route-sortOrder="@ViewBag.SortOrder"
                                           asp-route-page="@ViewBag.CurrentPage"
                                           onclick="return confirm('Bạn có chắc muốn khôi phục kinh doanh sản phẩm này?');"
                                           title="Khôi phục kinh doanh">
                                            <i class="fa fa-undo"></i>
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9">Không tìm thấy dữ liệu</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @* phan trang *@
        @{
            var boLocHienTai = new Dictionary<string, string>
        {
        { "search", ViewBag.Search },
        { "thuongHieuId", ViewBag.ThuongHieuId?.ToString() },
        { "loaiId", ViewBag.LoaiId?.ToString() },
        { "sortOrder", ViewBag.SortOrder },
        { "trangThai", ViewBag.TrangThai?.ToString() }
        };
        }

        <partial name="_Pager" view-data='@new ViewDataDictionary(ViewData) {
            { "ActionName", "TrangQLSanPham" },
            { "Filters", boLocHienTai }
        }' />

    </div>
</div>