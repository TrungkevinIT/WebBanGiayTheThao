@model WebBanGiayTheThao.ViewModels.BinhLuan.BinhLuanAdminVM

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Quản lý bình luận";
}

<div class="bg-light rounded p-4">

    <h4 class="mb-4">🗨️ Quản lý bình luận</h4>

    <!-- FILTER -->
    <form method="get" class="mb-3 d-flex align-items-center">
        <select name="trangThai" class="form-select w-auto me-2">
            <option value="">-- Tất cả trạng thái --</option>
            <option value="0" selected="@(Model.TrangThai == 0)">Chờ duyệt</option>
            <option value="1" selected="@(Model.TrangThai == 1)">Đã duyệt</option>
            <option value="2" selected="@(Model.TrangThai == 2)">Bị ẩn</option>
        </select>

        <button class="btn btn-primary">
            <i class="fa fa-filter me-1"></i> Lọc
        </button>
    </form>

    <!-- TABLE -->
    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Người dùng</th>
                    <th>Sản phẩm</th>
                    <th>Nội dung</th>
                    <th>Sao</th>
                    <th>Ngày</th>
                    <th>Trạng thái</th>
                    <th style="width:160px">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.DanhSach.Any())
                {
                    foreach (var item in Model.DanhSach)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.User?.Username</td>
                            <td>@item.SanPham?.TenSanPham</td>
                            <td class="text-start" style="max-width:300px">
                                @item.NoiDung
                            </td>
                            <td>@item.Sao ⭐</td>
                            <td>@item.NgayTao?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @if (item.TrangThai == 0)
                                {
                                    <span class="badge bg-warning">Chờ duyệt</span>
                                }
                                else if (item.TrangThai == 1)
                                {
                                    <span class="badge bg-success">Đã duyệt</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Bị ẩn</span>
                                }
                            </td>
                            <td>
                                @if (item.TrangThai != 1)
                                {
                                    <form asp-action="Duyet" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button class="btn btn-sm btn-success">
                                            <i class="fa fa-check"></i> Duyệt
                                        </button>
                                    </form>
                                }

                                @if (item.TrangThai != 2)
                                {
                                    <form asp-action="An" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button class="btn btn-sm btn-danger">
                                            <i class="fa fa-eye-slash"></i> Ẩn
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted">
                            Không có bình luận nào
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- PAGINATION -->
    @if (Model.TotalPage > 1)
    {
        <nav>
            <ul class="pagination justify-content-center mt-3">

                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-route-page="@(Model.CurrentPage - 1)"
                       asp-route-trangThai="@Model.TrangThai">
                        &lt;
                    </a>
                </li>

                @for (int i = 1; i <= Model.TotalPage; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link"
                           asp-route-page="@i"
                           asp-route-trangThai="@Model.TrangThai">
                            @i
                        </a>
                    </li>
                }

                <li class="page-item @(Model.CurrentPage == Model.TotalPage ? "disabled" : "")">
                    <a class="page-link"
                       asp-route-page="@(Model.CurrentPage + 1)"
                       asp-route-trangThai="@Model.TrangThai">
                        &gt;
                    </a>
                </li>

            </ul>
        </nav>
    }

</div>
